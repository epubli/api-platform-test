{
    "name": "l0wskilled/api-platform-test",
    "description": "Bundle to ease the test of Endpoints generated by ApiPlatform.",
    "license": "MIT",
    "authors": [
        {
            "name": "Hendrik Knigge",
            "email": "h.knigge@epubli.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "api-platform/api-pack": "^1.3"
    },
    "require-dev": {
        "doctrine/orm": "^2.12",
        "ext-json": "*",
        "symfony/framework-bundle": "6.1.*",
        "symfony/serializer": "6.1.*",
        "symfony/validator": "6.1.*",
        "symfony/http-client": "6.1.*",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^6.1",
        "hautelook/alice-bundle": "^2.11"
    },
    "suggest": {
        "doctrine/doctrine-bundle": "to use the ORM extensions",
        "doctrine/mongodb-odm-bundle": "to use the MongoDB ODM extensions"
    },
    "autoload": {
        "psr-4": {
            "Epubli\\ApiPlatform\\TestBundle\\": "src/"
        }
    }
}
